<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.darzul.hoshiyo.wictrip.fragment.AlbumCreationFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fgt_bg">

    <EditText
        android:id="@+id/album_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_album_name"
        android:inputType="text"
        android:layout_marginTop="30dp" />

    <Spinner
        android:id="@+id/places_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_name"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/date_picker_from"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:text="@string/from"
        android:layout_below="@id/places_spinner"
        android:gravity="center"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/date_picker_to"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:text="@string/to"
        android:layout_below="@id/date_picker_from"
        android:gravity="center"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/create_btn"
        android:text="@string/create_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_picker_to"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

</RelativeLayout>